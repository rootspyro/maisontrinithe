---
interface Props {
	title: string;
}

import Footer from '../components/Footer.astro'
const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Somos una marca exclusiva de té e infusiones provenientes del principal país exportador de té. Clásico, ceremonial, artístico" />
		<meta name="viewport" content="width=device-width" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
	</head>
	<body>
		<slot />
    <Footer />
	</body>
</html>

